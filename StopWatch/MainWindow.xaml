<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="MainWindow" Height="320" Width="550" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="time_Text" Content="00:00:00:00" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="122" Width="510" RenderTransformOrigin="0.475,1.351" FontSize="100"/>
        <Button x:Name="startBtn" Content="START" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top" Width="133" Height="74" FontSize="36" Background="#FF2AB60B" Click="Start_Click"/>
        <Button x:Name="stopBtn" Content="STOP" HorizontalAlignment="Left" Margin="200,197,0,0" VerticalAlignment="Top" Width="133" Height="74" FontSize="36" Background="#FFF30707" Click="Stop_Click"/>
        <Button x:Name="resetBtn" Content="RESET" HorizontalAlignment="Left" Margin="387,197,0,0" VerticalAlignment="Top" Width="133" Height="74" FontSize="36" Click="Reset_Click"/>
    </Grid>
</Window>
